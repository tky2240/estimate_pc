{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es2020",
    "target": "esnext",
    "jsx": "react-jsx",
    "lib": [
      "es2018",
      "dom"
    ],
    "moduleResolution": "node",
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "server/index.tsx",
    "node_modules"
  ]
}